<!DOCTYPE html>
<html>

<head>
  <title>首页</title>
  <% include head %>
</head>

<body>
  <nav class="navbar navbgc">
    <div class="navbar-header">
      <a href="#" class="navbar-brand">首页</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav nav-tabs navbar-right">
        <li><a href="#"><%= username %></a></li>
        <li><a href="/write">写文章</a></li>
        <li><a href="#">退出</a></li>
      </ul>
    </div>
  </nav>


  <div class="table-responsive">
    <% data.list.map(function(item,index){ %>
    <table class="table table-striped">
      <tr>
        <td class="info">
          <%= index+1 %>
        </td>
        <td class="info"><%= item.username %></td>
        <td class="info"><a href="/detail?id=<%=item.id%>"><%= item.title %></a></td>
        <td class="info"><%= item.time %></td>
        <td class="info"><a href="/write?id=<%=item.id%>&page=<%=data.currentPage%>">编辑</a></td>
        <td class="info"><a href="/artile/delete?id=<%=item.id%>&page=<%=data.currentPage%>">删除</a> </td>
      </tr>
    </table>
    <% }) %>

  </div>

  <nav aria-label="12">
    <% for(let i=0;i<data.totle;i++){ %>
    <a href="/?page=<%=i+1%>"><%= i+1 %></a>
    <% } %>
  </nav>

</body>

</html>